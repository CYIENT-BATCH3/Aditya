--------------------------------------------------------Programm to print the value and address using double pointers-----------------------------------------------------
#include<stdio.h>
int main()
{
    int a,b,c,d;
    printf("enter the value of a b c d\n");
    scanf("%d %d %d %d",&a,&b,&c,&d);
    int *p1;
    int **p2;
    int ***p3;
    p1=&a;
    printf("the address of a is =%p\n",p1);
    printf("the value of a is =%d\n",*p1);
    p2=&p1;
    printf("the address of p1 is =%p\n",p2);
    printf("the value of b is =%p\n",*p2);
    p3=&p2;
    printf("the address of p2 is =%p\n",p3);
    printf("the value of c is =%p\n",*p3);
    return 0;
}
